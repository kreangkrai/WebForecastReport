@{ 
    ViewData["Title"] = "Opportunity";
}
<div class="row p-3">
    <div class="col-xl-2 pb-3">
        <button id="btn_create_opp" type="button" class="btn btn-primary">
            <i class="fas fa-plus"></i> CREATE OPP
        </button>
    </div>
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <span class="card-title">Opportunities</span>
            </div>
            <div class="card-body">
                <table id="table_opp" class="table table-bordered table-sm">
                    <thead>
                        <tr>
                            <th>OPP NO</th>
                            <th>Date</th>
                            <th>OP Type</th>
                            <th>Customer</th>
                            <th>End User</th>
                            <th>Project Name</th>
                            <th>Product Type</th>
                            <th>Amount</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="Modal" />
@section Scripts
{
    <script type="text/javascript">
        $('#btn_create_opp').on('click', function () {
            $('#ShowModal').modal();
        });

        $('#table_opp').DataTable();
    </script>
}