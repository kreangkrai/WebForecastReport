                <form>
                    <div class="row">
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="OpportunityNo">Opportunity NO.</label>
                                <input id="OpportunityNo" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="Date">Date</label>
                                <input id="Date" type="date" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-6">
                            <div class="form-group">
                                <label for="OPType">OP Type</label>
                                <select id="OPType" class="form-control">
                                    <option>Please Select</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="Customer">Customer</label>
                                <input id="Customer" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="col-xl-12">
                            <div class="form-group">
                                <label for="EndUser">End User</label>
                                <input id="EndUser" type="text" class="form-control" />
                            </div>
                        </div>
