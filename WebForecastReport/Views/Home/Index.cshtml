        function PopulateDataBarChart(datas) {
        $(function () {
            if (bar_chart_stages != null)
                bar_chart_stages.destroy();
            var chartName = "bar_chart_stages";
            var ctx = document.getElementById(chartName).getContext('2d');
            var _datas = [datas.day_7, datas.day_14, datas.day_30, datas.day_60, datas.day_90];

            var type = ["> 7 Day", "> 14 Day", "> 30 Day","> 60 Day","> 90 Day"];

            var bg_colors = ['#003F5CC8', '#2F4B7CC8', '#665191C8', '#2F4B7CC8', '#665191C8'];
            var border_colors = ['#003F5CFF', '#2F4B7CFF', '#665191FF', '#2F4B7CC8', '#665191C8'];
            var data = {
                datasets: [
                    {
                        data: _datas,
                        backgroundColor: bg_colors,
                        borderColor: border_colors,
                        borderWidth: 2,
                    }
                ],
                labels: type
            }
            var options = {
                maintainAspectRatio: false,
                scales: {
                    yAxes: [{
                        id: 'first-y-axis',
                        position: 'left',
                        type: 'linear',
                        scaleLabel: { display: true, labelString: 'Count' },
                        gridLines: { display: true, color: "rgba(255,99,164,0.2)" },
                        ticks: { min: 0, beginAtZero: true },
                    }],
                    xAxes: [{
                        ticks: { min: 0, beginAtZero: true },
                        scaleLabel: { display: true, labelString: 'Day' },
                        gridLines: { display: true }
                    }],
                },
                plugins: {
                    title: {
                        display: true,
                        text: "Stages Day",
                        fontColor: "white",
                        fontSize: 24,
                    },
                    legend: {
                        position: 'top',
                        display: false,
                        labels: {
                            color: '#FFFFFFC8',
                            font: {
                                size: 14
                            }
                        }
                    }
                },
                onHover: (event, chartElement) => {

                    /*event.target.style.cursor = chartElement[0] ? 'pointer' : 'default';*/
                },
                onClick: BarChartClick
            };
            bar_chart_stages = new Chart(ctx, { type: 'bar', data: data, options: options });
        });
    };
        function BarChartClick(evt, point) {
            var name = document.getElementById("sale_name").value;
            if (point.length > 0) {
                var index = point[0].index;
                var day = "";
                if (index == 0) {
                    day = "between 7 and 14";
                } else if (index == 1) {
                    day = "between 14 and 30";
                } else if (index == 2) {
                    day = "between 30 and 60";
                } else if (index == 3) {
                    day = "between 60 and 90";
                } else if (index == 4) {
                    day = " > 90";
                }

                $.ajax({
                    url: '@Url.Action("GetStagesDay", "Home")',
                    type: "post",
                    contentType: 'application/x-www-form-urlencoded',
                    data: {
                        name, day
                    },
                    success: function (response) {
                        var datas = response;
                        var dataSet = [];
                        for (var i = 0; i < datas.length; i++) {
                            var data = [
                                datas[i].quotation_no,
